public class BankAccount{

	private String name;
	private String password;
	private int pin;
	private int accountNum;
	private float balance;


	public static void setName(String FullName) {
		name = FullName;
	}

	public static void setPassword(String newPass){
		password = newPass;
	}
	public static void setPin(int newPin){
		pin = newPin;
	}
	public static void setAccountNum(int newNum){
		accountNum = newNum;
	}
	public static void setBalance(){
		balance = 0;
	}

	public static void printInfo (int accNumber, String pass){
