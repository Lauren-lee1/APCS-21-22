		}else{
			System.out.println("Your password or account number is wrong.");
		}
	}

	public static float deposit(int accNumber, String pass,float amtDeposit) {
		if (accNumber == accNum && pass == password){
			balance = balance + amtDeposit;
			System.out.println("Your balance is now " + balance);
		}else{
			System.out.println("Your password or account number is wrong.");
		}
	}


	public static float withdraw (int accNumber, String pass, float amtWithdraw) {
		if (accNumber == accNum && pass == password){
			if (balance-amtWithdraw < 0){
